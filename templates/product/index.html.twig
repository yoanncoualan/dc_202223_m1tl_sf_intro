{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<h1>Liste des produits</h1>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Category</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for p in products %}
            <tr>
                <td>{{p.name}}</td>
                <td>{{p.description}}</td>
                <td>{{p.quantity}}</td>
                <td>{{p.price}}</td>
                <td>{{p.category}}</td>
                <td>
                    <a href="{{path('un_produit', {'id':p.id})}}" class="btn btn-primary">
                        Voir
                    </a>
                    <a href="{{path('delete_product', {'id':p.id})}}" class="btn btn-danger">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun produit</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<h2>Ajouter un produit</h2>
{{ form(add) }}
{% endblock %}
